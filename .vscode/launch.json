{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "edge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src/public"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src/public"
        }
    ]
}